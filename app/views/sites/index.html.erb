<p id="notice"><%= notice %></p>

<h1>Sites</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Link</th>
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr>
        <td><%= site.title %></td>
        <td><%= site.link %></td>
        <td><%= link_to 'Show', site, class: 'btn btn-primary' %></td>
        <td><%= link_to 'Edit', edit_site_path(site),class: 'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' } , class: 'btn btn-primary'%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Site', new_site_path, class: 'btn btn-primary' %>
