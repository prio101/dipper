<%= form_with(model: site, local: true) do |form| %>
  <% if site.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(site.errors.count, "error") %> prohibited this site from being saved:</h2>

      <ul>
      <% site.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-4">
      <%= form.label(:title, "Title") %>
      <%= form.text_field(:title, class: 'form-control') %>
    
      <%= form.label(:link, "Link") %>
      <%= form.text_field(:link, class: 'form-control') %>
    
      <%= form.label(:user_id, "User") %>
      <%= form.select(:user_id, options_for_select([[current_user.first_name, current_user.id]])) %> 
      <br/>
      <%= form.label(:project_id, "Project") %>
      <%= form.select(:project_id, Project.all.collect {|p| [p.name, p.id]}) %> 
    </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
